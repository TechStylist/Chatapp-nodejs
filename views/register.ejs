<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
</head>
<style>
a{
    text-decoration: none;
}
#alert{
  display: none;
}
</style>
<body class="container p-2">
 <h2>Register New Account</h2><br>
 <form method="post" action="/register">
  <div class="mb-3">
    <label for="exampleInputName" class="form-label">Full Name</label>
    <input name="name" type="text" placeholder="Full Name:" class="form-control" id="exampleInputPassword1" required>
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail" class="form-label">Email</label>
    <input name="email" type="email" placeholder="Email:" class="form-control" id="exampleInputPassword1" required>
  </div>

  <div class="mb-3">
    <label for="exampleInputUsername" class="form-label">Username</label>
    <input name="username" type="text" placeholder="Username:" class="form-control" id="username" aria-describedby="emailHelp" required>
    <h6 id="alert">Username already exist....</h6>
    <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
  </div>

  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input name="password" type="password" placeholder="Password:" class="form-control" id="exampleInputPassword1" required>
  </div>

  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="option1" required>
    <label class="form-check-label" for="inlineRadio1">Male</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="option2" required>
    <label class="form-check-label" for="inlineRadio2">Female</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="gender" id="inlineRadio3" value="option3" required>
    <label class="form-check-label" for="inlineRadio3">Rather Not to say</label>
  </div>
<br><br>
  <div class="mb-3">
    <label for="exampleInputMobile" class="form-label">Mobile</label>
    <input name="mobile" type="number" placeholder="Phone No.:" class="form-control" id="exampleInputPassword1" required>
  </div><br>

  <button type="submit" class="btn btn-primary">Create New Account</button><br><br>
  <a href="/">Already have an account? Login</a>
</form>
<script>
  document.querySelector("#username").addEventListener("input", function(){
  if(this.value.trim().length > 0){
    var that=this
    axios.get(`/check/${this.value.trim()}`).then(function(user){
    if(user.data !== null){
      document.querySelector('#username').style.border ='2px solid red';
      document.querySelector("#alert").style.display = 'initial';
    }else{
      document.querySelector('#username').style.border ='1px solid black';
      document.querySelector("#alert").style.display = 'none';
    }
    })
  }
  })
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.27.2/axios.min.js" integrity="sha512-odNmoc1XJy5x1TMVMdC7EMs3IVdItLPlCeL5vSUPN2llYKMJ2eByTTAIiiuqLg+GdNr9hF6z81p27DArRFKT7A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>  
</body>
</html>